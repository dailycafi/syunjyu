# ===========================================
# AI Daily - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# .env is gitignored and will not be committed

# ===========================================
# Model Configuration
# ===========================================

# Default AI model name (used across all services)
DEFAULT_MODEL_NAME=MiniMax-M2.1

# Default provider for analysis tasks
DEFAULT_ANALYSIS_PROVIDER=minimax

# Default model provider type: "local" or "remote"
DEFAULT_MODEL_PROVIDER=remote

# Remote provider name: "minimax", "openai", "deepseek", etc.
DEFAULT_REMOTE_PROVIDER=minimax

# Local model settings (for LM Studio, Ollama, etc.)
LOCAL_MODEL_NAME=local_medium
LOCAL_MODEL_BASE_URL=http://127.0.0.1:1234/v1

# ===========================================
# API Keys
# ===========================================

# MiniMax API Key
MINIMAX_API_KEY=

# OpenAI API Key (optional)
OPENAI_API_KEY=

# DeepSeek API Key (optional)
DEEPSEEK_API_KEY=

# ===========================================
# Server Configuration
# ===========================================

# Backend server port
BACKEND_PORT=8000

# Sync server port
SYNC_SERVER_PORT=8001

# ===========================================
# Database
# ===========================================

# SQLite database path (relative to project root)
DATABASE_PATH=database.sqlite
