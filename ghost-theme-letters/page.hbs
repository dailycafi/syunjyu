{{!< default}}

{{#post}}
<article class="page-content">
    <div class="page-paper">
        <h1 class="page-title">{{title}}</h1>
        
        {{#if feature_image}}
        <figure class="page-image">
            <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
        </figure>
        {{/if}}
        
        <div class="gh-content">
            {{content}}
        </div>
    </div>
</article>
{{/post}}
